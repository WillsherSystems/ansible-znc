Version = 1.2
<Listener l>
  Port = {{ znc_port }}
  IPv4 = {{ znc_ipv4 | default('true') }}
  IPv6 = {{ znc_ipv6 | default('false') }}
  SSL = {{ znc_ssl }}
</Listener>
LoadModule = partyline
LoadModule = webadmin

<User {{ znc_user | default('admin') }}>
  Pass       = {{ znc_user_password | default('sha256#cc7c4c7f5a6d137d40ead990630d15e0ba2b4a8fc17b69b9fb3ae09583326d43#y-lQcP*f3TeAar_,,fqq#') }}
  Admin      = true
  Nick       = {{ znc_user_nick | default('someluser') }}
  AltNick    = {{ znc_user_nick | default('someluser') }}_
  Ident      = {{ znc_user_ident | default('toor') }}
  RealName   = {{ znc_user_realname | default('Got ZNC?') }}
  Buffer     = {{ znc_user_buffer | default('50') }}
  AutoClearChanBuffer = {{ znc_user_autoclearchanbuffer | default('true') }}
  ChanModes  = +stn
  
  LoadModule = chansaver
  LoadModule = controlpanel
  LoadModule = perform
  LoadModule = webadmin
</User>
